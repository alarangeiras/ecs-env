language: node_js
node_js:
  - 12
branches:
  only:
    - master
cache:
  directories:
    - "node_modules"
install:
  - npm install
script:
  - npm run build
deploy:
  - provider: releases
    skip_cleanup: true
    api_key: $GITHUB_KEY
    file:
      - build/ecs-env-linux
      - build/ecs-env-macos
      - build/ecs-env-win.exe
  - provider: npm
    email: $NPM_EMAIL
    api_key: $NPM_KEY
